<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewDictionaryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/buttonDictionaryEdit"
        app:layout_constraintEnd_toStartOf="@+id/textViewDictionaryHidden"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonDictionaryEdit" />

    <TextView
        android:id="@+id/textViewDictionaryComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDictionaryName" />

    <TextView
        android:id="@+id/textViewDictionaryHidden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/hidden"
        app:layout_constraintBottom_toBottomOf="@+id/buttonDictionaryEdit"
        app:layout_constraintEnd_toStartOf="@+id/buttonDictionaryEdit"
        app:layout_constraintTop_toTopOf="@+id/buttonDictionaryEdit" />

    <Button
        android:id="@+id/buttonDictionaryEdit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/edit_button_label"
        app:icon="@drawable/ic_action_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="8dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewDictionaryComment"
        app:layout_constraintStart_toStartOf="@+id/textViewDictionaryComment"
        app:layout_constraintTop_toBottomOf="@+id/textViewDictionaryComment" />
</androidx.constraintlayout.widget.ConstraintLayout>