<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewTitleCurrencyCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/currency_edit"
            android:textColor="@color/header"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/checkBoxHideCurrencyCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/is_not_visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitleCurrencyCard" />

        <TextView
            android:id="@+id/textViewNameCurrencyCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:labelFor="@id/editTextNameCurrencyCard"
            android:text="@string/name"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/editTextNameCurrencyCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editTextNameCurrencyCard" />

        <EditText
            android:id="@+id/editTextNameCurrencyCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewNameCurrencyCard"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxHideCurrencyCard" />

        <TextView
            android:id="@+id/textViewSymbolCurrencyCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:labelFor="@id/editTextSymbolCurrencyCard"
            android:text="@string/symbol"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/editTextSymbolCurrencyCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editTextSymbolCurrencyCard" />

        <EditText
            android:id="@+id/editTextSymbolCurrencyCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewSymbolCurrencyCard"
            app:layout_constraintTop_toBottomOf="@+id/editTextNameCurrencyCard" />

        <TextView
            android:id="@+id/textViewCommentCurrencyCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:labelFor="@id/editTextCommentCurrencyCard"
            android:text="@string/comment"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/editTextCommentCurrencyCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editTextCommentCurrencyCard" />

        <EditText
            android:id="@+id/editTextCommentCurrencyCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:gravity="start|top"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewCommentCurrencyCard"
            app:layout_constraintTop_toBottomOf="@+id/editTextSymbolCurrencyCard" />

        <Button
            android:id="@+id/buttonAcceptCurrencyCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/edit_button_label"
            app:layout_constraintEnd_toStartOf="@+id/buttonDeleteCurrencyCard"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextCommentCurrencyCard" />

        <Button
            android:id="@+id/buttonDeleteCurrencyCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/delete_button_label"
            app:layout_constraintEnd_toStartOf="@+id/buttonCancelCurrencyCard"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/buttonAcceptCurrencyCard"
            app:layout_constraintTop_toBottomOf="@+id/editTextCommentCurrencyCard" />

        <Button
            android:id="@+id/buttonCancelCurrencyCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/cancel_button_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/buttonDeleteCurrencyCard"
            app:layout_constraintTop_toBottomOf="@+id/editTextCommentCurrencyCard" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>